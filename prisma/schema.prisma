// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL") // uses connection pooling
    directUrl = env("DIRECT_URL") // uses direct connection
}

model Directory {
    id          String      @id @default(uuid())
    name        String
    path        String?     @unique
    subDirs     Directory[] @relation("relatedDir")
    files       File[]
    parentDir   Directory?  @relation("relatedDir", fields: [parentDirId], references: [id])
    parentDirId String?
    isRoot      Boolean     @default(false)
}

model File {
    id          String     @id @default(uuid())
    name        String
    path        String?    @unique
    type        FileType
    map         String
    parentDir   Directory? @relation(fields: [parentDirId], references: [id])
    parentDirId String?
}

enum FileType {
    Filmstrip
    Embed
}
